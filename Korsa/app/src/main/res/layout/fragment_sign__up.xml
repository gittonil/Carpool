<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signupactivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center_vertical"
    tools:context="nil.error.korsa.Acitivity.Sign_Up">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="46dp"
            android:weightSum="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_height="@dimen/logo_height"
                android:layout_width="@dimen/logo_width"
                android:background="@drawable/poolit"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/signup_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1">
            
            <ScrollView
                android:scrollbars="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <LinearLayout
                    android:id="@+id/signup_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:ems="10"
                            android:hint="@string/name"
                            android:background="@drawable/edittextfield"
                            android:id="@+id/reg_name"
                            android:layout_marginLeft="@dimen/autocomplete_margin"
                            android:layout_marginRight="@dimen/autocomplete_margin"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/uname_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/top_margin">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:id="@+id/reg_email"
                            android:hint="@string/email"
                            android:background="@drawable/edittextfield"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="@dimen/autocomplete_margin"
                            android:layout_marginRight="@dimen/autocomplete_margin"/>

                    </android.support.design.widget.TextInputLayout>

                    <!--<android.support.design.widget.TextInputLayout-->
