                    <!--</android.support.design.widget.TextInputLayout>-->

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/pass_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/top_margin">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/reg_pass"
                            android:hint="@string/password"
                            android:background="@drawable/edittextfield"
                            android:layout_marginRight="@dimen/autocomplete_margin"
                            android:layout_marginLeft="@dimen/autocomplete_margin"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/compass_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/top_margin">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/reg_confirmpass"
                            android:hint="@string/Confirm_password"
                            android:background="@drawable/edittextfield"
                            android:layout_marginLeft="@dimen/autocomplete_margin"
                            android:layout_marginRight="@dimen/autocomplete_margin"/>

                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/term_cond"
                        android:textSize="10dp"
                        android:checked="false"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/autocomplete_margin"
                        android:layout_gravity="start"
                        android:gravity="center_vertical" />
                    <Button
                        android:layout_width="@dimen/button_horizontal_margin"
                        android:layout_height="@dimen/button_vertical_margin"
                        android:layout_marginTop="20dp"
                        android:id="@+id/btnsignup"
                        android:text="@string/sign_up"
                        android:background="@drawable/shape"
                        android:textColor="@drawable/buttontext"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/already_acc"
                            android:textColor="@color/black"
                            android:id="@+id/tvrtrnlgnsupg"
                            />

                        <TextView
                            android:id="@+id/login_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/log_in"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"/>
