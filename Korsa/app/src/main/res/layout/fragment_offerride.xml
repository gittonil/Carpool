<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nil.error.korsa.Acitivity.OfferRIde">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/sourceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text=" "/>

        <AutoCompleteTextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="@string/source"
            android:background="@drawable/edittextfield"
            android:inputType="text"
            android:layout_marginLeft="@dimen/autocomplete_margin"
            android:layout_marginRight="@dimen/autocomplete_margin"
            android:maxLines="1"
            android:imeOptions="actionNext"/>


        <TextView
            android:id="@+id/DestinationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text=" "/>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:ems="10"
            android:singleLine="true"
            android:hint="@string/destination"
            android:background="@drawable/edittextfield"
            android:id="@+id/destination"
            android:layout_marginLeft="@dimen/autocomplete_margin"
            android:layout_marginRight="@dimen/autocomplete_margin"
            android:alpha="0.9"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/DateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text=" "
                android:layout_gravity="center"/>

            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/startDate"
                android:background="@drawable/edittextfield"
                android:id="@+id/startDate"
                android:layout_marginLeft="@dimen/autocomplete_margin"
                android:alpha="0.9"/>
        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text=" "/>

            <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:ems="10"
                    android:singleLine="true"
                    android:hint="@string/startTime"
                    android:background="@drawable/edittextfield"
                    android:id="@+id/startTime"
                    android:layout_marginRight="@dimen/autocomplete_margin"
                    android:alpha="0.9"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!--<TextView-->
                <!--android:layout_marginTop="25dp"-->
                <!--android:layout_marginLeft="25dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="40dp" -->
                <!--android:text="@string/seatsVacant"/>-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/SeatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text=" "/>

            <AutoCompleteTextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:singleLine="true"
                android:hint="@string/seatsVacant"
                android:background="@drawable/edittextfield"
                android:id="@+id/seatsVacant"
                android:layout_marginLeft="@dimen/autocomplete_margin"
                android:layout_marginRight="@dimen/autocomplete_margin"
                android:alpha="0.9"/>

                </LinearLayout>
        </LinearLayout>


        <Button
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish Ride"/>

    </LinearLayout>
    </ScrollView>
</FrameLayout>
